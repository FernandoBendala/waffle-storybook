{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "outDir": "lib",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "declaration": true,
        "declarationDir": "lib",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ],
    "mdx": {
        "plugins": [
            [
                "remark-frontmatter",
                [
                    "toml",
                    "yaml"
                ]
            ],
            "remark-gfm"
        ]
    }
}